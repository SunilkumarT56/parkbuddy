generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String  @id @default(uuid())
  phone      String  @unique
  roles      Role[]
  isVerified Boolean @default(false)

  spots    ParkingSpace[] @relation("OwnerSpots")
  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  DRIVER
  OWNER
}

model ParkingSpace {
  id      String @id @default(uuid())
  ownerId String
  owner   User   @relation("OwnerSpots", fields: [ownerId], references: [id])

  title       String
  description String?

  address String
  city    String
  state   String
  pincode String

  latitude  Float
  longitude Float

  pricePerHour   Float
  totalSlots     Int
  availableSlots Int

  isActive Boolean @default(true)

  images   SpotImage[]
  bookings Booking[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([latitude, longitude])
  @@index([ownerId])
}

model SpotImage {
  id      String       @id @default(uuid())
  spaceId String
  space   ParkingSpace @relation(fields: [spaceId], references: [id])

  imageUrl String

  createdAt DateTime @default(now())

  @@index([spaceId])
}

model Booking {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  spaceId String
  space   ParkingSpace @relation(fields: [spaceId], references: [id])

  startTime DateTime
  endTime   DateTime

  totalAmount Float
  status      BookingStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([spaceId])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}
